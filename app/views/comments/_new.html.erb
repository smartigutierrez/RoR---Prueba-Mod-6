<div class="card">
  <div class="card-body">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <% if @post.comments.exists?(user_id: current_user.id) %>
            <p>Ya has postulado a esta oferta.</p>
          <% else %>
            <%= form_for([@post, @post.comments.build]) do |f| %>
              <div class="form-group">
                <%= f.text_area :content, class: "form-control", rows: 2, placeholder: "Cuéntanos por qué deberías ser el elegido" %>
              </div>
              <div class="form-group">
                <br>
                <%= f.submit "Postular", class: "btn btn-success" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

