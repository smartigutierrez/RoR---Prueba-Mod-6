<div id="<%= dom_id post %>">
  <div class="card flex-row">
    <div class="card-body d-flex">
      <%= image_tag(post.image, class: "img-fluid align-self-center mr-3") %>
    </div>
  </div>
  <br>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.description %></p>
    </div>
  </div>
</div>
