<p style="color: green"><%= notice %></p>

<%= render @post %>
<br>
  <strong><%= @post.comments.count %> Postulaciones</strong>

<%= render 'comments/new', post: @post %>
<br>

<div>
<br>
    <% if user_signed_in? %>
      <% if current_user.id == @post.user_id %>
        <%= link_to "Editar oferta", edit_post_path(@post), class: "btn btn-light" %> 
        <br>
        <br>
        <%= button_to "Eliminar oferta", @post, method: :delete, class: "btn btn-danger"  %>
        <br>
      <% end %>
    <% end %>
</div>




