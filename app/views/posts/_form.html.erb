<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibieron guardar esta oferta:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <div>
    <%= form.label :image, "Foto de la oferta:", style: "display: block" %>
    <%= form.file_field :image, multiple: false, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :title, "TÃ­tulo:", style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, "Contenido:", style: "display: block" %>
    <%= form.text_area :description %>
  </div>

<div>
  <% if current_user.role == "admin" %>
